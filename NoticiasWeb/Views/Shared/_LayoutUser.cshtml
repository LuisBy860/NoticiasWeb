                         <form enctype="multipart/form-data"  asp-action="busqueda" asp-controller="MostrarNoticia" class="d-flex" >
                            @{
                                //contenido para el placeholder de busqueda
                                var busqueda = "Nueva Busqueda";
                                
                                if (ViewBag.busqueda != null || ViewBag.busqueda!="" )
                                {
                                    busqueda = ViewBag.busqueda;
                                }
                            }
                            <input class="form-control me-2" type="text" name="q" id="nuevaBusqueda" placeholder="@busqueda">
                            <button class="btn btn-outline-warning" type="submit" id="btnBuscar">Buscar</button>
                        </form>


                    </div>
                </div>
            </nav>
        </div>

        <!-- News  -->
        <div>
            <div class="row m-3" id="newsType"></div>




               <main role="main" class="pb-3">
            @RenderBody()
        </main>



            <div class="row me-2 ms-2" id="newsdetails"></div>
        </div>

