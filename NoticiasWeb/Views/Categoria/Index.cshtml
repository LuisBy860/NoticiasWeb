@{
}



@Html.ActionLink("Agregar","Agregar",new{@class="btn btn-primary"})

<table class="table table-striped" id="tablaEst">
    <thead>
        <tr>
            <th>Titulo</th>
             <th>Descripcion</th>
             <th>Acciones</th>
            
        </tr>

    </thead>
    <tbody>
        @foreach (var iterar in Model)
        {
            <tr>
                <td>@iterar.Titulo  </td>
                <td>@iterar.Descripcion  </td>
                @*El primer delete es para texto el segundo delte es la accion del controlador*@
                <td>@Html.ActionLink("Delete","Delete",new{id=@iterar.CategoriaId},new{@class="btn btn-danger"}) 
                @Html.ActionLink("Update","Load",new{id=@iterar.CategoriaId},new{@class="btn btn-warning"} ) </td>
            </tr>
        }

    </tbody>


</table>
@section scripts{

    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function(){
        var tabla = $('#tablaEst').DataTable();
        }   
        );

    </script>

}


